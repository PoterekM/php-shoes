<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <title>Sole Mate Finder</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Sole Seeker</h1>
        <h3> {{ shoe.getBrand }}</h3>
      </div>

      {% if stores is not empty %}
        <p>Here's where you can get your kicks</p>
        <ul>
          {% for store in stores %}
            <li>{{ store.getStore }}</li>
          {% endfor %}
        </ul>
        {% else %}
        <p>This shoe isn't being sold at any of our stores yet.</p>
      {% endif %}

      <form action="/add_stores" method="post">
        <input id="shoe_id" name="shoe_id" type="hidden" value="{{ shoe.getId }}" required>
        <label for="store_id">Select a store:</label>
        <select id="store_id" name="store_id" type="text">
          {% for store in all_stores %}
            <option value="{{ store.getId }}"> {{ store.getStore }} </option>
          {% endfor %}
        </select>
          <button type="submit" class="btn-info">Add a shoe house!</button>
      </form>

      <div class="well">
        <a href="/">Home</a> |||
          <a href="/stores">Go to Stores</a> |||
          <a href="/shoes">Go to shoes</a>
      </div>
    </div>
  </body>
</html>
